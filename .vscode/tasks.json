{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "group": {
        "kind": "build"
      },
      "command": "make -j${config:esp.build.parallel}",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build & Flash",
      "type": "shell",
      "command": "make flash -j${config:esp.build.parallel}",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Menu",
      "type": "shell",
      "command": "make menuconfig",
      "problemMatcher": []
    },
    {
      "label": "Monitor",
      "type": "shell",
      "command": "make monitor",
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "problemMatcher": []
    },
    {
      "label": "Build & Flash & Monitor",
      "dependsOrder": "sequence",
      "dependsOn": ["Build & Flash", "Monitor"],
      "problemMatcher": ["$gcc"]
    }
  ]
}
